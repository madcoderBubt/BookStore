@section scripts{
    <script src="~/js/plugins/jquery-ui.js"></script>
    <script type="text/javascript" src="~/js/plugins/sweetalert.min.js"></script>
    <!-- Data table plugin-->
    <script type="text/javascript" src="~/js/plugins/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/js/plugins/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript">
        var popup;
        var dataTable /*= $('#sampleTable').DataTable()*/;

        $(document).ready(function () {
            dataTable = $('#sampleTable').DataTable({
                //processing: true,
                //serverSide: true,
                ajax: {
                    url: "/Dashboard/Book/GetData",
                    type: "Get",
                    contentType: "application/Json",
                    dataType: "Json",
                    dataSrc: ""
                },
                columns: [
                    { data: "Id" },
                    { data: "Name" },
                    { data: "Author" },
                    { data: "Details" },
                    { data: "Price" },
                    { data: "ImgUrl" },
                    {
                        data: "Id",
                        "render": function (data) {
                            return "<div class='btn-group-sm' style='width:90px'>"
                                    +"<a class='btn btn-primary' onclick=PopupForm('Dashboard/Book/AddOrEdit/"+data+"') href='#'><i class='fa fa-lg fa-edit'></i></a>"
                                    +"<a class='btn btn-danger' href='#' onclick=''><i class='fa fa-lg fa-trash'></i></a></div>";
                        },
                        orderable: false,
                        searchable: false
                    }
                ],
                language: {
                    infoEmpty: "No records found!",
                    emptyTable: "No Data Found! Please Click <b>Add New</b> to add.",
                },
                
            });
        });

        //For Pop Up Dialog => Add or Edit Dialog
        function PopupForm(url) {
            var formDiv = $('<div>');
            $.get("https://localhost:44371/" + url)
                .done(function (response) {
                    formDiv.html(response);
                    popup = formDiv.dialog({
                        modal: true,
                        autoOpen: true,
                        resizable: false,
                        title: "Add or Update Book",
                        width: 500,
                        height: 600,
                        close: function () {
                            popup.dialog("destroy").remove();
                        }
                    });
                });
        }

        //For Refresh DataTable while closing Popup Dialog
        function submitForm(form1) {
            //var obj = $(form1).serialize();
            var obj = new FormData(form1);

            $.ajax({
                type: "post",
                url: "/Dashboard/Book/AddOrEdit",
                data: obj,
                dataType: "json",
                contentType: false,
                processData: false,
                success: function (data) {
                    if (data.success) {
                        popup.dialog("close");
                        dataTable.ajax.reload();
                        //alert(data.message);
                        $.notify(data.message, {
                            globalPosition: "top center",
                            className: "success",
                        });
                    } else {
                        $.notify(data.message, {
                            globalPosition: "top center",
                            className: "warning",
                        });
                    }
                }
            });

            return false;
        }

    </script>



