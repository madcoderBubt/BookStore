@section scripts{ 
    
    <script>
        function SubmitOrder() {
            var obj = $("#orderForm").serialize();
            //var obj = new FormData(document.getElementById("orderForm"));

            $.ajax({
                type: "post",
                url: "/Order/Checkout",
                data: obj,
                dataType: "json",
                contentType: 'application/x-www-form-urlencoded; charset=utf-8',
                //processData: false,
                success: function (data) {
                    if (data.success) {
                        alert(data.message);
                    } else {
                        alert(data.message);
                    }
                }
            });
        }
    </script>
}